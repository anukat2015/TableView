<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="TableView-IDE">
    <import file="../build.xml"/>
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target depends="check-run-class, compile" name="run-selected-file-in-src">
        <java classname="${run.class}" failonerror="true" fork="true">
            <classpath refid="tv.classpath"/>
        </java>
    </target>
    <target description="Checks if run.class is set" name="check-run-class">
        <fail unless="run.class">Must set property 'run.class'</fail>
    </target>
    
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="debug-selected-file-in-src" depends="check-debug-class, compile">
        <nbjpdastart addressproperty="jpda.address" name="TableView" transport="dt_socket">
            <classpath refid="tv.classpath"/>
        </nbjpdastart>
        <java classname="${debug.class}" fork="true">
            <classpath refid="tv.classpath"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
    <target description="Checks if debug.class is set" name="check-debug-class">
        <fail unless="debug.class">Must set property 'debug.class'</fail>
    </target>
    
</project>
